.row.carousel-holder
  .col-md-12
    #carousel-example-generic.carousel.slide(data-ride='carousel')
      ol.carousel-indicators
        li.active(data-target='#carousel-example-generic', data-slide-to='0')
        li(data-target='#carousel-example-generic', data-slide-to='1')
      .carousel-inner
        .item.active
          img.slide-image.carousel-sizes(src="/images/carousel-pres2.jpg", alt='')
        .item
          img.slide-image.carousel-sizes(src="/images/carousel-pres3.jpg", alt='')
      a.left.carousel-control(href='#carousel-example-generic', data-slide='prev')
        span.glyphicon.glyphicon-chevron-left
      a.right.carousel-control(href='#carousel-example-generic', data-slide='next')
        span.glyphicon.glyphicon-chevron-right
.row
  .col-sm-4.col-lg-4.col-md-4(ng-repeat="candidate in candidates")
    .thumbnail
      input(type="hidden", value="{{candidate._id}}")
      img.profile-sizes(src="{{candidate.img}}", alt='')
      .caption
        h4.pull-right Votes: 0
        h4
          a(href='#') {{candidate.candidateName}}
        p
          | {{candidate.desc}}
      .ratings
        p.pull-right 15 reviews
        p(ng-controller="fbController")
          button.btn.btn-default.btn-xs(type='button', name='voteMe', data-ng-disabled="!facebookReady",ng-click="vote(1, candidate._id)") vote me
          button.btn.btn-default.btn-xs(type='button', name='unvoteMe', data-ng-disabled="!facebookReady", ng-click="vote(-1,candidate._id)") un-vote me
